{
    "name": "xjx",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "main": "./dist/xjx.umd.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/xjx.umd.js",
            "types": "./dist/index.d.ts"
        },
        "./full": {
            "import": "./dist/xjx.full.js",
            "require": "./dist/xjx.full.umd.js",
            "types": "./dist/index.d.ts"
        },
        "./extensions/GetPathExtension": {
            "import": "./dist/extensions/GetPathExtension.js",
            "types": "./dist/extensions/GetPathExtension.d.ts"
        },
        "./extensions/getJsonSchemaExtension": {
            "import": "./dist/extensions/getJsonSchemaExtension.js",
            "types": "./dist/extensions/getJsonSchemaExtension.d.ts"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "build": "npm run clean && npm run build:types && npm run build:js",
        "build:types": "tsc --emitDeclarationOnly --outDir dist/dts",
        "build:js": "rollup -c",
        "build:prod": "NODE_ENV=production npm run build:js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
        "lint": "eslint ./src --ext .ts",
        "lint:fix": "eslint ./src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "docs": "typedoc --out docs src/index.ts",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags",
        "postbuild": "yalc push --private"
    },
    "keywords": [
        "xml",
        "json",
        "convert",
        "transform",
        "namespace",
        "cdata",
        "comment",
        "processing-instruction",
        "browser",
        "node"
    ],
    "author": {
        "name": "William Summers",
        "email": "william.summers+xjx@gmail.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/summersremote/xjx.git"
    },
    "bugs": {
        "url": "https://github.com/summersremote/xjx/issues"
    },
    "homepage": "https://github.com/summersremote/xjx#readme",
    "peerDependencies": {
        "jsdom": "^21.1.1"
    },
    "peerDependenciesMeta": {
        "jsdom": {
            "optional": true
        },
        "@xmldom/xmldom": {
            "optional": true
        }
    },
    "engines": {
        "node": ">=14.16.0"
    },
    "sideEffects": false,
    "yalcSig": "858b20bcd7c2dddfce2160eb3883a999"
}
